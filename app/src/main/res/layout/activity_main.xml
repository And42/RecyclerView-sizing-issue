<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/launch_no_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No issue 1 view"/>

    <Button
        android:id="@+id/launch_no_issue_2_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="No issue 2 views"/>

    <Button
        android:id="@+id/launch_with_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="With issue 1 view"/>

    <Button
        android:id="@+id/launch_with_issue_2_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="With issue 2 views"/>

</LinearLayout>